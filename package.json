{
  "name": "react-with-typescript",
  "version": "0.0.1",
  "description": "Setting up a react project written in typescript + es6 and tested with jest",
  "scripts": {
    "pretest": "rimraf ./coverage",
    "test": "NODE_ENV=test jest --config jest.config.json --coverage",
    "test:watch": "jest --config jest.config.json --watch",
    "build": "NODE_ENV=production npm run lint && npm run test && webpack --progress",
    "lint": "npm run eslint && npm run tslint",
    "eslint": "eslint app --fix",
    "tslint": "tslint --project tsconfig.json --config tslint.json app/**/*.ts* --fix",
    "start": "node server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phillipemoreira/react-with-typescript.git"
  },
  "keywords": [
    "react",
    "jest",
    "typesript"
  ],
  "author": "Phillipe Moreira (phillipealexmoreira@gmail.com)",
  "license": "MIT",
  "homepage": "https://github.com/phillipemoreira/react-with-typescript#readme",
  "devDependencies": {
    "@types/enzyme": "^3.1.6",
    "@types/jest": "^21.1.9",
    "@types/material-ui": "^0.20.0",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-test-renderer": "^16.0.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.1.2",
    "babel-loader": "^7.1.2",
    "babel-plugin-dynamic-import-node": "^1.2.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-plugin-transform-react-constant-elements": "^6.23.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-plugin-transform-react-remove-prop-types": "^0.4.12",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.14.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "express": "^4.16.2",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^22.0.3",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.2.0",
    "tslint": "^5.8.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-react": "^3.3.3",
    "typescript": "^2.6.2",
    "webpack": "^3.10.0"
  },
  "dependencies": {
    "material-ui": "^0.20.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  }
}
